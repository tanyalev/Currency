<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ConverterTitle">
        <item name="android:textColor">@color/textLight</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="ConverterSelector">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:drawableEnd">@drawable/ic_chevron_down</item>
        <item name="android:drawableRight">@drawable/ic_chevron_down</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">@color/textDark</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="ConverterInput">
        <item name="android:background">@null</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:maxLength">10</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/textDark</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="ConverterButton">
        <item name="android:background">@drawable/bg_round_button</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>
</resources>